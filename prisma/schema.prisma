
generator client  {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(cuid())
  email String  @unique
  name  String
  surname String
  phone String
  salt               String
  password String
  current_logged_in_at   DateTime
  last_logged_in_at      DateTime
  created_at          DateTime       @default(now())
  goal Goal?
  meal Meal[]
   running              Running[]
  cycling              Cycling[]

}



model Goal{ 
  id  String @id @default(cuid())
  calories String
  
  user User @relation(fields: [user_id],references: [id])
  user_id  String @unique
  created_at          DateTime       @default(now())

}
model Meal{
  id String @id @default(cuid())
  name Meals
  isBreakFat Boolean @default(false)
  isLunch Boolean @default(false)
  isDinner Boolean @default(false)
  isSnacks Boolean @default(false)
  food Food[]
  user User @relation(fields: [user_id],references: [id])
  user_id String
  created_at          DateTime       @default(now())
}

model Food{
  id  String @id @default(cuid())
  name String
  calories Int
  carbs  String
  proteins String
  fats String
  meal  Meal []
}

model Running {
  id         String   @id @default(cuid())
  distance   Float
  
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  created_at DateTime @default(now())
}

model Cycling {
  id         String   @id @default(cuid())
  distance   Float
  
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  created_at DateTime @default(now())
}

 enum Meals {
  BreakFast
  Lunch
  Dinner
  Snacks
}

